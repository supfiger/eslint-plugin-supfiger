{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".vscode",
    ".idea",
    "node_modules",
    "**/.git",
    "types",
    "tests",
    "lib",
    "tmp"
  ]
}
